{
  "name": "trushnin-ui",
  "version": "0.9.0-beta.0",
  "description": "React UI Kit with TypeScript, CSS Modules, and tree-shaking support (Beta)",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@trushnin-ui/tokens": "workspace:*",
    "@trushnin-ui/theme": "workspace:*",
    "@trushnin-ui/utils": "workspace:*",
    "@trushnin-ui/primitives": "workspace:*",
    "@trushnin-ui/components": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "react",
    "ui-kit",
    "typescript",
    "components",
    "design-system",
    "beta"
  ],
  "license": "MIT",
  "publishConfig": {
    "tag": "beta"
  }
}
